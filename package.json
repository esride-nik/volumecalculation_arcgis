{
  "name": "arcgis-react",
  "version": "1.0.3",
  "homepage": "https://github.com/samMatenaer/arcgis-react-utils",
  "description": "React hook wrappers around the @arcgis/core library",
  "module": "./dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samMatenaer/arcgis-react-utils.git"
  },
  "scripts": {
    "start": "vite",
    "dev": "vite",
