    "@arcgis/core": "^4.26.5",
    "@esri/calcite-components-react": "^1.4.0",
    "@tanstack/react-query": "^4.29.7",
    "arcgis-react": "^1.0.3",
    "react-fast-compare": "^3.2.1"
